<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ffffff"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:layout_below="@+id/relFirst">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/logo"
                    android:layout_margin="5dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/bajajlogo"/>


                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:layout_below="@+id/logo"
                    android:layout_margin="10dp"
                    android:background="#2f2f2f"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/redeemtext"
                    android:layout_margin="5dp"
                    android:layout_centerHorizontal="true"
                    android:text="Are You Sure You Want to Redeem"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:layout_below="@id/view1"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="10dp"
                    android:layout_below="@+id/redeemtext"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cancelredeem"
                        android:textSize="16dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#F54119"
                        android:text="Cancel"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/confirmredeem"
                        android:textSize="16dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Confirm"
                        android:textStyle="bold"
                        android:textColor="#008000"/>

                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
