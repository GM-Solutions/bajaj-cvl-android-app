<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_search_bar_shop_background"
                android:id="@+id/relFirst">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:textSize="18sp"
                    android:layout_toRightOf="@+id/logo"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:text="Please Enter OTP"/>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/logo"
                    android:layout_margin="5dp"
                    android:src="@drawable/bajajlogo"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/relFirst">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/otp"
                    android:inputType="number"
                    android:hint="Please Enter OTP"
                    android:padding="10dp"
                    android:background="@drawable/square_box_blue"
                    android:layout_margin="10dp"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleInverse"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/otp"
                    android:layout_alignRight="@id/otp"
                    android:layout_marginRight="10dp"
                    android:layout_alignTop="@id/otp"
                    android:id="@+id/otpprogressbar"
                    />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:layout_below="@+id/otp"
                    android:layout_margin="10dp"
                    android:background="#2f2f2f"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:padding="10dp"
                    android:layout_below="@+id/otp"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cancel"
                        android:textSize="16dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#F54119"
                        android:text="Cancel"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/resend"
                        android:textSize="16dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#EFCD73"
                        android:text="Resend OTP"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/verify"
                        android:textSize="16dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Verify OTP"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>

                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
