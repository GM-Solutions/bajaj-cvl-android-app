<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:background="#ffffff"
                android:src="@drawable/placeholder" />

            <TextView
                android:id="@+id/redeemproductid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/redeembutton"
                android:layout_toRightOf="@+id/profile_image"
                android:padding="3dp"
                android:text="Product Id: 2001"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/redeemdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/redeemproductid"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/redeembutton"
                android:layout_toRightOf="@+id/profile_image"
                android:padding="3dp"
                android:text="Please Enter OTP"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/redeempoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:text="LP:300"
                android:textColor="#ffffff"


                />

            <ProgressBar
                android:id="@+id/pb"
                style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/redeempoints"
                android:layout_marginTop="5dp"
                android:progressDrawable="@drawable/progress" />


            <TextView
                android:id="@+id/redeembutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#00335b"
                android:padding="10dp"
                android:text="Redeem"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/redeembuttonone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#808080"
                android:padding="10dp"
                android:text="Redeem"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:visibility="invisible" />

            <com.like.LikeButton
                android:id="@+id/thumb_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/profile_image"
                android:text="Redeem"
                android:textStyle="bold"
                app:circle_end_color="#006400"
                app:circle_start_color="#006400"
                app:dots_primary_color="#006400"
                app:dots_secondary_color="#006400"
                app:icon_size="22dp"
                app:like_drawable="@drawable/target_enable"
                app:unlike_drawable="@drawable/target_disable" />

            <TextView
                android:id="@+id/redeempointrequire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/redeembuttonone"
                android:layout_toRightOf="@+id/thumb_button"
                android:gravity="center"
                android:padding="10dp"
                android:text="RP:100"
                android:textColor="#ffffff"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
